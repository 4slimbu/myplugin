{
    "name": "myplugin",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8 <9"
    },
    "scripts": {
        "wp-env": "wp-env",
        "start": "wp-env start",
        "test:e2e": "playwright test --config playwright.config.ts",
        "test:e2e:debug": "playwright test --config playwright.config.ts --debug",
        "test:unit:php:setup": "wp-env start",
        "test:unit:php:base": "wp-env run --env-cwd='wp-content/plugins/myplugin' tests-wordpress /var/www/html/wp-content/plugins/myplugin/vendor/bin/phpunit -c /var/www/html/wp-content/plugins/myplugin/phpunit.xml --verbose",
        "test:unit:php": "npm-run-all test:unit:php:setup test:unit:php:base",
        "test:all": "npm-run-all test:unit:php test:e2e"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@playwright/test": "^1.36.2",
        "@wordpress/e2e-test-utils-playwright": "^0.7.0",
        "@wordpress/env": "^7.0.0",
        "@wordpress/scripts": "^26.10.0",
        "npm-run-all": "4.1.5"
    }
}
